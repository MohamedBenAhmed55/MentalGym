<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgapp"
    android:orientation="vertical"
    tools:context=".WorldScrambelvl1">




    <TextView
        android:id="@+id/textScreen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"
        android:text="Can you guess the word ?"
        android:textColor="#FFF"
        android:textSize="22sp" />


    <TextView
        android:id="@+id/countdown_text"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginLeft="172dp"
        android:text="10:00"
        android:textSize="20dp"
        android:textColor="@color/white"
         />

    <LinearLayout
        android:layout_width="290dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginTop="38dp"
        android:background="@drawable/bgquestion"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="43dp"
            android:layout_height="55dp"
            android:background="@drawable/lightbulb"
            android:visibility="visible"
            android:id="@+id/hint"
            android:onClick="HintClicked"/>


        <TextView
            android:id="@+id/textQuestion"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:lineSpacingExtra="6dp"
            android:text="Animal With Wings"
            android:textAlignment="center"
            android:textColor="#332FA2"
            android:textSize="26sp"
            />

    </LinearLayout>

    <EditText
        android:id="@+id/editText"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="60dp"
        android:background="@drawable/bgpurple"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:inputType="textNoSuggestions"
        android:padding="10dp"
        android:textColor="#332FA2"
        android:textSize="22sp"
        />

    <TextView
        android:id="@+id/textTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="28dp"
        android:layout_marginRight="28dp"
        android:layout_marginBottom="16dp"
        android:text="Letters"
        android:textColor="#FFF"
        android:textSize="24sp" />

    <LinearLayout
        android:id="@+id/layoutParent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:orientation="horizontal">


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp">

        <ImageButton
            android:id="@+id/resetbtn"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/resetbtn" />

    </LinearLayout>


</LinearLayout>